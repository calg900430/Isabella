@model Isabella.Web.ViewModels.UsersViewModel.ResetPasswordViewModel;

@{
    ViewData["Title"] = "Recover Password";
    ViewData["Title"] = "Recover Password";
    ViewData["Title"] = "Recover Password";
}

<h2>Recuperar Contraseña</h2>

<div class="row">
    <div class="col-md-12 offset-md-4">
        <form id="form_login" asp-action="Login" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" class="form-control mt-4" placeholder="Escriba el correo del usuario." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewPassword">Email</label>
                <input asp-for="NewPassword" class="form-control mt-4" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewPasswordConfirm">Email</label>
                <input asp-for="NewPasswordConfirm" class="form-control mt-4" />
                <span asp-validation-for="NewPasswordConfirm" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button id ="resetpassword" asp-action="Login"  class="btn btn-primary" />
                <a asp-action="Login" class="btn btn-success">Autenticarse</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
